<Window x:Class="NDoD.Setup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NDoD"
        mc:Ignorable="d"
        Title="Setup" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Welcome to No Deal or Deal!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

        <Label Content="Start by choosing some options:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Number of cases (5-25):" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>

        <Button Content="Start!" Margin="0,0,10,10" Click="StartButton_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <TextBox Height="23" Margin="151,76,10,0" TextWrapping="Wrap" Text="25" VerticalAlignment="Top" PreviewTextInput="CaseCountTextBox_Preview"/>
    </Grid>
</Window>
